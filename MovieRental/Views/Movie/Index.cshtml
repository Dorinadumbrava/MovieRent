@model IEnumerable<MovieRental.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<input class="btn btn-default" type="button" value="Add Movie" onclick="location.href='@Url.Action("AddMovie", "Movie")'" />
</br>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genres)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", "Movie", new { id = item.MovieId }, null)

            </td>
            <td>
                <ul>
                    @foreach (var genre in item.Genres)
                    {
                    <li>@genre.GenreName</li>
                    }
                </ul>
                </td>
            </tr>
        }

            </table>
